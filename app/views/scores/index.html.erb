<b>Score</b> <br>

Score: <%= @model_view_data.score %>   <br>

<%= form_tag 'score', method: 'post' do %>
    <%= submit_tag('Classify') %>       <br>

    <% @model_view_data.categories.each do |feature, value| %>
        <%= label_tag(feature, feature) %>
        <%= select_tag(feature, options_for_select(value, @model_view_data.categorical_values[feature])) %> <br>
    <% end %>
    
    <% @model_view_data.continuous_features.each do |feature, value| %>
        <%= label_tag(feature, feature) %>
        <%= text_field_tag(feature, value) %>            <br>
    <% end %>


<% end %>



